@model IEnumerable<ARSDAL.Route>

@{
    //ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutFinal.cshtml";
}

@*<p>
    @Html.ActionLink("Create New", "Create")
